<%- include("partials/header"); -%>
<% if (section === "important") { %>
    <div class="importantEntry entryForm" id="important">
        <form action="/update/<%= section %>" method="post">
            <label for="info">Information: </label>
            <input type="text" name="info" id="info" value="<%= data[0].info %>" required>
            <input type="hidden" name="id" value="<%= data[0]._id %>">
            <button type="submit">Save</button>
            <button type="reset">Reset</button>
        </form>
    </div>
<% } else if (section === "servicechange") { %>
        <div class="serviceChangeEntry entryForm" id="serviceChange">
            <form action="/update/<%= section %>" method="post">
                <label for="scName">Client Name: </label>
                <input type="text" name="scName" id="scName" value="<%= data[0].case %>" required>
                <label for="rfs">RSF: </label>
                <input type="text" name="rfs" id="rfs" value="<%= data[0].rfs %>">
                <label for="scMailRef">Mail Reference: </label>
                <input type="text" name="scMailRef" id="scMailRef" value="<%= data[0].mailRef %>" required>
                <label for="activity">Activity: </label>
                <textarea name="activity" id="activity" cols="30" rows="10"><%= data[0].action %></textarea>
                <input type="hidden" name="scLastUpdateDate" id="scLastUpdateDate">
                <input type="hidden" name="id" value="<%= data[0]._id %>">
                <input type="hidden" name="date" class="date_class" id="SCdate">
                <button type="submit">Save</button>
                <button type="reset">Reset</button>
            </form>
        </div>


<% } else if (section === "linkstatus") { %>
        <div class="linkStatusEntry entryForm" id="linkStatus">
            <form action="/update/<%= section %>" method="post">
                <label for="issue">Issue: </label>
                <input type="text" name="issue" id="issue" value="<%= data[0].case %>">
                <label for="lsMailRef">Mail Reference: </label>
                <input type="text" name="lsMailRef" id="lsMailRef" value="<%= data[0].mailRef %>">
                <label for="lsSummary">Summary: </label>
