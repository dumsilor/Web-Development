                <label for="lsAction">Action: </label>
                <textarea name="lsAction" id="lsAction" cols="30" rows="10"><%= data[0].action %></textarea>
                <input type="text" name="lsLastUpdateDate" id="lsLastUpdateDate">
                <input type="hidden" name="date" class="date_class" id="LSdate">
                <input type="hidden" name="id" value="<%= data[0]._id %>">
                <button type="submit">Save</button>
                <button type="reset">Reset</button>
            </form>
        </div>
<% } else if (section === "backbone") { %>
