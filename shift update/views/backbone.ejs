<%- include("partials/header"); -%>
<section class="backbone">
    <div class="backboneDisplay">
        <h3 class="sectionHeader">Backbone Issue</h3>

        <% bbData.forEach(element => { %>
         
        <p class="case"><b>Issue: </b><%= element.case %></p>
        <p class="summary"><b>Summary: </b><%= element.summary %></p>
        <p class="action"><b>Action: </b><%= element.action %></p>
        <p class="mailRef"><b>Mail Ref: </b><%= element.mailRef %></p>
        <p class="date"><b>Date: </b><%= element.date %> </p>
        <p class="lastUpdated"><b>Last Updated: </b><%= element.lastUpdate %></p>
        <form action="/edit" method="post">
            <input type="hidden" name="id" value=<%= element._id %> >
            <input type="hidden" name="section" value="backbone" >
            <button type="submit">Edit</button>
        </form>
        <form action="/delete/backbone" method="post">
            <input type="hidden" name="id" value=<%= element._id %> >
            <input type="hidden" name="section" value="backbone" >
            <button type="submit">Delete</button>
        </form>
        <hr>
        <% }) %>
    </div>
    <div class="backboneEntry entryForm" id="backbone">
        <form action="/backbone" method="post">
            <label for="bbIssue">Issue: </label>
            <input type="text" name="bbIssue" id="bbIssue">
            <label for="bbDate">Date: </label>
            <input type="text" name="date" class="date_class" id="bbDate">
            <label for="bbMailRef">Mail Reference: </label>
            <input type="text" name="bbMailRef" id="bbMailRef">
            <label for="bbSummary">Summary: </label>
            <textarea name="bbSummary" id="bbSummary" cols="30" rows="10"></textarea>
            <label for="bbAction">Action: </label>
            <textarea name="bbAction" id="bbAction" cols="30" rows="10"></textarea>
            <input type="hidden" name="bbLastUpdateDate" id="bbLastUpdateDate">
            <button type="submit">Enter</button>
            <button type="reset">Reset</button>
        </form>
    </div>
</section>
<%- include("partials/footer"); -%>